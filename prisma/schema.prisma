generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(uuid()) @db.Uuid
  email String  @unique
  pwd   String
  name  String?
  posts Post[]
}

model Post {
  id     String @id @default(uuid()) @db.Uuid
  userId String
  title  String
  body   String
  user   User   @relation(references: [id], fields: [userId])
}
